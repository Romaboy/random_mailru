import webbrowser
import random

def open_random_mailru_question():
    base_url = "https://otvet.mail.ru/question/"
    random_id = random.randint(1000000, 3000000)  # Примерный диапазон ID вопросов
    full_url = base_url + str(random_id)
    webbrowser.open(full_url)

if __name__ == "__main__":
    open_random_mailru_question()
